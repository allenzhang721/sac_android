<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shelvesbg"
    android:focusable="true" >

    <EditText
        android:id="@+id/editInputDumy"
        android:layout_width="1px"
        android:layout_height="1px" />

    <com.hl.realtest.shelves.BookShelvesView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:layout_marginLeft="2px"
        android:layout_marginRight="2px"
        android:layout_marginTop="60px"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none" >
    </com.hl.realtest.shelves.BookShelvesView>

    <LinearLayout
        android:id="@+id/layoutAction"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:background="@drawable/shuji_biaotilan"
        android:gravity="bottom"
        android:paddingBottom="11px" 
        
        
        >

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="60px"
            android:background="@drawable/help" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" 
            android:gravity="center"
            >
            
            
        </LinearLayout>

        <Button
            android:id="@+id/btnAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="5px"
            android:background="@drawable/add"
            android:padding="0px" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="20px"
            android:background="@drawable/edit" />
    </LinearLayout>
	
     <ImageView 
        android:id="@+id/iv_centerttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shuji_title"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        />
     
    <FrameLayout
        android:id="@+id/layCover"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/layAlpha"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0.5"
            android:background="#C0C0C0" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/input_bg"
            android:visibility="gone" >
            <EditText
                android:id="@+id/editInputAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="@string/address.infor"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                 />
|
            <Button
                android:id="@+id/btnCancelAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btncancel" />

            <Button
                android:id="@+id/btnOkAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btnok" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/deleteinfo"
            android:visibility="gone" >


            <Button
                android:id="@+id/btnOkDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/deleteokxml" />
            
            <Button
                android:id="@+id/btnCancelDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/cancelaaaxml" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/closeinfo"
            android:visibility="gone" >

            <Button
                android:id="@+id/btnCancelClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btncancel" />

            <Button
                android:id="@+id/btnOkClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btnok" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/aboutbg"
            android:layout_gravity="center"
            android:orientation="horizontal"
             >
            <TextView 
             android:id="@+id/versiontext"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             />
        </RelativeLayout>
        
    </FrameLayout>

</FrameLayout>